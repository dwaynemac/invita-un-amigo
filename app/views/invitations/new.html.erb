<%= content_for :head do %>
  <%= stylesheet_link_tag :mes_amigo %>
<% end -%>

<p class="hideInMobile">Pensá a quién te gustaría invitar a nuestra escuela y regalale una semana de prácticas en DeR<span class="versalita">ose</span> Cerviño.</p>

<div class="form">
  <%= form_for @invitation, html: {
    id: 'contactform',
    name: 'contactform',
    class: nil
  } do |f| %>
    <p><span id="sprytextfield1">
      <label for="nombre_alumno">Tu nombre:</label>
      <br />

    <%= f.text_field :inviter_name, id: 'nombre_alumno', size: '30%' %>
    <span class="textfieldRequiredMsg">No olvides de dejar tu nombre.</span></span></p>
    <p><span id="sprytextfield2">
      <label for="invitado">Mi invitado:<br />
     
      </label>
      <%= f.text_field :invited_name, id: 'invitado', size: '30%' %>
    <span class="textfieldRequiredMsg">No olvides dejar el nombre de tu amigo.</span></span></p>
    <p><span id="sprytextfield3">
    <label for="email">E-mail de mi invitado:<br />

    </label>
    <%= f.email_field :invited_email, id: 'email', size: '30%' %>
    <span class="textfieldRequiredMsg">Con este dato podremos contactarnos con tu amigo.</span><span class="textfieldInvalidFormatMsg">Invalid format.</span></span></p>
    <p>
      <span id="sprytextfield4">
        <label for="phone">Teléfono de tu invitado:<br /></label>
        <%= f.text_field :invited_phone, id: 'phone', size: '30%' %>
        <span class="textfieldRequiredMsg">Con este dato podremos contactarnos con tu amigo.</span>
        <span class="textfieldInvalidFormatMsg">Invalid format.</span>
      </span>
    </p>
    <p>
    <%= f.submit 'Enviar invitación', id: 'enviar' %>
    </p>
  <% end -%>
</div><!--fin form-->

<%= content_for :body_end do %>
  <script type="text/javascript">
    var sprytextfield1 = new Spry.Widget.ValidationTextField("sprytextfield1");
    var sprytextfield2 = new Spry.Widget.ValidationTextField("sprytextfield2");
    var sprytextfield3 = new Spry.Widget.ValidationTextField("sprytextfield3", "email");
    var sprytextfield4 = new Spry.Widget.ValidationTextField("sprytextfield4");
  </script>
<% end -%>
